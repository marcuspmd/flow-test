{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "flow-test-engine",
  "version": "1.0.2",
  "description": "A comprehensive API testing engine with directory-based execution, global variables, and priority-driven test management.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "flow-test": "dist/cli.js",
    "flow-test-html": "dist/report-generator/cli.js"
  },
  "scripts": {
    "build": "npm run build:css && tsc && npm run copy:assets",
    "build:css": "npx @tailwindcss/cli -i ./src/templates/report.css -o ./src/templates/styles.css",
    "dev": "npm run build:css && ts-node src/cli.ts",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:unit:ci": "jest --ci --coverage --watchAll=false",
    "test": "node scripts/smart-test.js",
    "test:all": "node scripts/smart-test.js",
    "test:flow": "node dist/cli.js -c flow-test.config.yml",
    "test:verbose": "FLOW_TEST_ARGS=--verbose node scripts/smart-test.js",
    "test:silent": "FLOW_TEST_ARGS=--silent node scripts/smart-test.js",
    "test:critical": "FLOW_TEST_ARGS=\"--priority critical\" node scripts/smart-test.js",
    "test:high": "FLOW_TEST_ARGS=\"--priority critical,high\" node scripts/smart-test.js",
    "test:direct": "ts-node src/cli.ts",
    "test:sequential": "FLOW_TEST_ARGS=\"--config config/sequential-only.yml\" node scripts/smart-test.js",
    "test:parallel": "FLOW_TEST_ARGS=\"--config config/parallel-only.yml\" node scripts/smart-test.js",
    "test:performance": "FLOW_TEST_ARGS=\"--config config/performance-test.yml\" node scripts/smart-test.js",
    "test:debug": "FLOW_TEST_ARGS=\"--config config/debug-mode.yml --verbose\" node scripts/smart-test.js",
    "test:advanced": "FLOW_TEST_ARGS=\"--tag advanced --verbose\" node scripts/smart-test.js",
    "test:iteration": "FLOW_TEST_ARGS=\"--suite advanced-iteration-test\" node scripts/smart-test.js",
    "test:retry": "FLOW_TEST_ARGS=\"--suite advanced-retry-patterns\" node scripts/smart-test.js",
    "test:assertions": "FLOW_TEST_ARGS=\"--suite advanced-assertions-test\" node scripts/smart-test.js",
    "test:conditional": "FLOW_TEST_ARGS=\"--suite conditional-execution-test\" node scripts/smart-test.js",
    "test:error-handling": "FLOW_TEST_ARGS=\"--suite error-handling-test\" node scripts/smart-test.js",
    "test:file-upload": "FLOW_TEST_ARGS=\"--suite file-upload-multipart-test\" node scripts/smart-test.js",
    "test:environment": "FLOW_TEST_ARGS=\"--suite environment-feature-flags-test\" node scripts/smart-test.js",
    "test:workflows": "FLOW_TEST_ARGS=\"--suite complex-workflows-test\" node scripts/smart-test.js",
    "test:edge-cases": "FLOW_TEST_ARGS=\"--tag edge-cases,advanced --detailed\" node scripts/smart-test.js",
    "server:docker": "docker compose up -d httpbin",
    "server:down": "docker compose down -v",
    "server:status": "docker compose ps",
    "server:logs": "docker compose logs httpbin",
    "test:compose": "docker compose up --build --abort-on-container-exit --exit-code-from flow-test flow-test",
    "test:force-docker": "docker compose up --build --abort-on-container-exit --exit-code-from flow-test flow-test",
    "test:cleanup": "CLEANUP_AFTER_TESTS=true node scripts/smart-test.js",
    "compose:up": "docker compose up -d httpbin",
    "compose:down": "docker compose down -v",
    "init": "node dist/cli.js init",
    "init:basic": "node dist/cli.js init --template basic",
    "init:performance": "node dist/cli.js init --template performance",
    "init:ci": "node dist/cli.js init --template ci_cd",
    "init:comprehensive": "node dist/cli.js init --template comprehensive",
    "prepare": "npm run build",
    "report:html": "node dist/report-generator/cli.js",
    "report:generate": "node dist/report-generator/cli.js results/latest.json",
    "report:regenerate": "ts-node regenerate-html.ts",
    "copy:assets": "node scripts/copy-assets.js",
    "docs": "jsdoc -c jsdoc.json && mkdir -p docs/public/assets docs/build && cp -R public/assets/* docs/public/assets/ 2>/dev/null || true",
    "docs:clean": "rm -rf docs",
    "docs:serve": "npm run docs && http-server docs -p 4000 -o"
  },
  "keywords": [
    "api",
    "testing",
    "typescript",
    "yaml",
    "automation",
    "flow",
    "engine",
    "package"
  ],
  "author": "Marcus",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "@tailwindcss/cli": "^4.1.3",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "axios": "^1.7.2",
    "fast-glob": "^3.3.0",
    "jmespath": "^0.15.0",
    "js-yaml": "^4.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "@jest/types": "^30.0.5",
    "@microsoft/api-documenter": "^7.25.4",
    "@microsoft/api-extractor": "^7.52.11",
    "@microsoft/tsdoc": "^0.15.0",
    "@types/jest": "^30.0.0",
    "@types/jmespath": "^0.15.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.2",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "jest-html-reporters": "^3.1.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsdoc-markdown": "^1.4.1",
    "typescript": "^5.4.5",
    "better-docs": "^2.7.3",
    "http-server": "^14.1.1",
    "jsdoc": "^4.0.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}