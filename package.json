{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "flow-test-engine",
  "version": "2.0.1",
  "description": "A comprehensive API testing engine with directory-based execution, global variables, and priority-driven test management.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "flow-test-engine": "dist/cli.js",
    "fest": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test:flow": "node scripts/smart-test.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "npm run build",
    "init": "node dist/cli.js init",
    "server:docker": "docker compose up -d httpbin",
    "server:down": "docker compose down -v",
    "server:logs": "docker compose logs httpbin",
    "orchestrator": "node dist/server/orchestrator.js",
    "orchestrator:dev": "ts-node src/server/orchestrator.ts"
  },
  "keywords": [
    "api",
    "testing",
    "typescript",
    "yaml",
    "automation",
    "flow",
    "engine",
    "package"
  ],
  "author": "Marcus",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "report-dashboard/**/*",
    "README.md"
  ],
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "axios": "^1.7.2",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.0",
    "inversify": "^7.10.3",
    "isolated-vm": "^6.0.2",
    "jmespath": "^0.15.0",
    "js-yaml": "^4.1.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/types": "^30.0.5",
    "@microsoft/api-documenter": "^7.25.4",
    "@microsoft/api-extractor": "^7.52.11",
    "@microsoft/tsdoc": "^0.15.0",
    "@types/jest": "^30.0.0",
    "@types/jmespath": "^0.15.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.23",
    "better-docs": "^2.7.3",
    "http-server": "^14.1.1",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "jest-html-reporters": "^3.1.7",
    "jsdoc": "^4.0.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsdoc-markdown": "^1.4.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}