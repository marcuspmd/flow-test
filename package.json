{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "flow-test-engine",
  "version": "1.0.0",
  "description": "A comprehensive API testing engine with directory-based execution, global variables, and priority-driven test management.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "flow-test": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "ts-node src/cli.ts",
    "test:all": "ts-node src/cli.ts --simple",
    "test:verbose": "ts-node src/cli.ts --verbose",
    "test:silent": "ts-node src/cli.ts --silent",
    "test:critical": "ts-node src/cli.ts --priority critical",
    "test:high": "ts-node src/cli.ts --priority critical,high",
    "prepare": "npm run build",
    "docs": "npm run build && npx @microsoft/api-extractor run --config api-extractor.json",
    "docs:serve": "npm run docs && cd docs && python3 -m http.server 8080"
  },
  "keywords": [
    "api",
    "testing",
    "typescript",
    "yaml",
    "automation",
    "flow",
    "engine",
    "package"
  ],
  "author": "Marcus",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "axios": "^1.7.2",
    "fast-glob": "^3.3.0",
    "jmespath": "^0.15.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.25.4",
    "@microsoft/api-extractor": "^7.52.11",
    "@microsoft/tsdoc": "^0.15.0",
    "@types/jmespath": "^0.15.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}