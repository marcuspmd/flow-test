                {step.assertions_results && !step.assertions_results.every(a => a.passed) && (
                  <div class="alert alert-error alert-sm mt-2">
                    <span class="text-xs">Assertion failed</span>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
